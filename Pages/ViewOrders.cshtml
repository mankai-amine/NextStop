@page
@model NextStop.Pages.ViewOrdersModel
@{
    ViewData["Title"] = "My Orders";
}

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Origin</th>
            <th>Destination</th>
            <th>Date</th>
            <th>Departure time</th>
            <th>Arrival time</th>
            <th>Passengers</th>
            <th>Total ($)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Orders.Any())  
        {
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Trip.Origin</td>
                    <td>@order.Trip.Destination</td>
                    <td>@order.DateOfTravel.ToString("yyyy-MM-dd")</td>
                    <td>@order.Trip.DepartureTime</td>
                    <td>@order.Trip.ArrivalTime</td>
                    <td>@order.NumOfPassengers</td>            
                    <td>@order.Trip.Price * (@order.NumOfPassengers - @order.NumOfDiscounts) 
                        + ( 0.8 * @order.Trip.Price) * @order.NumOfDiscounts </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">You have no orders.</td>  
            </tr>
        }
    </tbody>
</table>


